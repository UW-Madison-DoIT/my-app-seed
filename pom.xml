<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>edu.wisc.my.app</groupId>
	<artifactId>my-app-seed</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>My App Seed Parent</name>
	<description>Parent pom for seed project demonstrating how to write "apps" for My UW Madison.</description>
	<scm>
            <connection>scm:git:git@github.com:UW-Madison-DoIT/my-app-seed.git</connection>
            <developerConnection>scm:git:git@github.com:UW-Madison-DoIT/my-app-seed.git</developerConnection>
            <url>https://github.com/UW-Madison-DoIT/my-app-seed</url>
            <tag>HEAD</tag>
        </scm>
        <dependencyManagement>
            <dependencies>
	        <dependency>
                    <groupId>edu.wisc.my.apps</groupId>
                    <artifactId>uw-frame</artifactId>
                    <version>3.1.4</version>
                    <type>war</type>
		</dependency>
            </dependencies>
        </dependencyManagement>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.2</version>
				</plugin>
				<plugin>
					<groupId>org.eclipse.jetty</groupId>
					<artifactId>jetty-maven-plugin</artifactId>
					<version>9.2.8.v20150217</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<configuration>
              <skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>my-app-seed-war</module>
	</modules>
</project>
